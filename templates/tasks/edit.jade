extends ../layout

block content
  h1 Edit Content
  form(action="/tasks/#{task._id}?_method=PUT", method="POST" enctype="application/x-www-form-urlencoded")
      p
        label(for="title_input") Title 
        input#title_input(type="text", name="taskTitle", value='#{task.title}')
      p
        label(for="notes") Notes 
        input#notes(type="text", name="taskNotes", value='#{task.notes}')
      
      button Submit Edit



        

